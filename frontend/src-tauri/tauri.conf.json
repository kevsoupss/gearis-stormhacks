{
    "$schema": "https://schema.tauri.app/config/1",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "frontend",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true,
                "execute": true,
                "scope": [
                    {
                        "name": "osascript",
                        "cmd": "osascript",
                        "args": true
                    }
                ]
            },
            "window": {
                "all": false,
                "hide": true,
                "show": true
            }
        },
        "macOSPrivateApi": true,
        "windows": [
            {
                "title": "frontend",
                "width": 400,
                "minHeight": 100,
                "decorations": false,
                "transparent": true,
                "resizable": false,
                "alwaysOnTop": true
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.kevin.frontend",
            "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
        }
    }
}
